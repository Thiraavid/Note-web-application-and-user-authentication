<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="css/homepage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notes Dashboard</title>
  </head>
  <body>

   <div class="newnote"> <h1>Notes Dashboard</h1>
    <a id="newnote" href="/new">
 
      <i class="fa-solid fa-pencil"></i>&nbsp;&nbsp;  New Note</a>
  </div>
  <div class="container-fluid dashboard">
    <div class="row">
        <% notes.forEach(note => { %>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title"><%= note.title %></h2>
                    <p class="card-text"><%= note.content %></p>
                    <div class="btn1">
                        <a href="/edit/<%= note._id %>?_method=PUT" class="btn btn-secondary">Edit</a>
                        <form action="/delete/<%= note._id %>?_method=DELETE" method="post">
                            <button class="btn btn-primary" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

  
  </body>
</html>
